<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <!-- Error Card -->
            <div class="card shadow-lg border-0 mt-5">
                <div class="card-body p-5">
                    <!-- Error Icon -->
                    <div class="error-icon mb-4">
                        <i class="fas fa-exclamation-triangle fa-5x text-danger"></i>
                    </div>
                    
                    <!-- Error Message -->
                    <h1 class="display-4 fw-bold text-danger mb-3">Oops! Something went wrong</h1>
                    
                    {{#if message}}
                    <div class="alert alert-danger mb-4" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        {{message}}
                    </div>
                    {{/if}}
                    
                    <p class="lead text-muted mb-5">
                        {{#if (eq title '404 - Not Found')}}
                        The page you're looking for doesn't exist or has been moved.
                        {{else}}
                        We encountered an error while processing your request. Please try again later.
                        {{/if}}
                    </p>
                    
                    <!-- Action Buttons -->
                    <div class="d-grid gap-3 d-md-block">
                        <a href="/" class="btn btn-success btn-lg px-4 me-2">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                        <a href="/recipes/public" class="btn btn-outline-success btn-lg px-4 me-2">
                            <i class="fas fa-utensils me-2"></i>Browse Recipes
                        </a>
                        <button onclick="window.history.back()" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                    
                    <!-- Additional Help -->
                    <div class="mt-5">
                        <h5 class="mb-3">Need more help?</h5>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <i class="fas fa-search fa-2x text-success mb-3"></i>
                                        <h6>Search Recipes</h6>
                                        <p class="text-muted small">Find recipes by ingredients or categories</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <i class="fas fa-question-circle fa-2x text-success mb-3"></i>
                                        <h6>Get Help</h6>
                                        <p class="text-muted small">Visit our help center for support</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <i class="fas fa-envelope fa-2x text-success mb-3"></i>
                                        <h6>Contact Us</h6>
                                        <p class="text-muted small">Reach out to our support team</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Technical Details (for development) -->
            {{#if (eq NODE_ENV 'development')}}
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-code me-2"></i>Technical Details</h6>
                </div>
                <div class="card-body">
                    <pre class="bg-dark text-light p-3 rounded small"><code>{{json error}}</code></pre>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>

<style>
    .error-icon {
        animation: bounce 2s infinite;
    }
    
    @keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
    
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    pre {
        max-height: 300px;
        overflow-y: auto;
    }
</style>