                    <li class="mb-2"><a href="/auth/login" class="text-light text-decoration-none"><i class="fas fa-chevron-right me-2"></i>Login</a></li>
                    <li class="mb-2"><a href="/auth/register" class="text-light text-decoration-none"><i class="fas fa-chevron-right me-2"></i>Register</a></li>
                    {{/if}}
