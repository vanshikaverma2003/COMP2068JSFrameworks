            <div class="col-md-6 text-md-end">
                <a href="/about" class="text-light text-decoration-none me-3">About Us</a>
                <a href="/contact" class="text-light text-decoration-none me-3">Contact</a>
                <a href="#" class="text-light text-decoration-none">Privacy Policy</a>
            </div>
        </div>
    </div>
</footer>

<script>
    // Set current year in footer
    document.addEventListener('DOMContentLoaded', function() {
        const yearSpan = document.querySelector('footer p');
        if (yearSpan) {
            yearSpan.innerHTML = yearSpan.innerHTML.replace('{{year}}', new Date().getFullYear());
        }
    });
</script>