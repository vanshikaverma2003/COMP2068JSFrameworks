<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/recipes/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Add Recipe</li>
                </ol>
            </nav>
            
            <!-- Form Header -->
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <h1 class="display-6 fw-bold text-success mb-3">
                        <i class="fas fa-plus-circle me-2"></i>Add New Recipe
                    </h1>
                    <p class="lead text-muted">Share your culinary creation with the community</p>
                </div>
            </div>
            
            <!-- Recipe Form -->
            <form action="/recipes/add/new" method="POST" class="needs-validation" novalidate>
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h4>
                    </div>
                    <div class="card-body">
                        <!-- Title -->
                        <div class="mb-3">
                            <label for="title" class="form-label fw-bold">
                                <i class="fas fa-heading me-2"></i>Recipe Title *
                            </label>
                            <input type="text" class="form-control form-control-lg" 
                                   id="title" name="title" 
                                   value="{{formData.title}}"
                                   placeholder="e.g., Classic Chocolate Chip Cookies" required>
                            <div class="invalid-feedback">Please enter a recipe title.</div>
                            <div class="form-text">Give your recipe a descriptive and appealing name.</div>
                        </div>
                        
                        <!-- Description -->
                        <div class="mb-3">
                            <label for="description" class="form-label fw-bold">
                                <i class="fas fa-align-left me-2"></i>Description *
                            </label>
                            <textarea class="form-control" id="description" name="description" 
                                      rows="3" placeholder="Describe your recipe..." required>{{formData.description}}</textarea>
                            <div class="invalid-feedback">Please enter a description.</div>
                            <div class="form-text">Briefly describe what makes this recipe special.</div>
                        </div>
                        
                        <!-- Category and Difficulty -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="category" class="form-label fw-bold">
                                    <i class="fas fa-tag me-2"></i>Category *
                                </label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="">Select a category</option>
                                    {{#each categories}}
                                    <option value="{{this}}" {{#if (eq this ../formData.category)}}selected{{/if}}>
                                        {{this}}
                                    </option>
                                    {{/each}}
                                </select>
                                <div class="invalid-feedback">Please select a category.</div>
                            </div>
                            
                            <div class="col-md-6">
                                <label for="difficulty" class="form-label fw-bold">
                                    <i class="fas fa-chart-bar me-2"></i>Difficulty Level *
                                </label>
                                <select class="form-select" id="difficulty" name="difficulty" required>
                                    <option value="">Select difficulty</option>
                                    {{#each difficulties}}
                                    <option value="{{this}}" {{#if (eq this ../formData.difficulty)}}selected{{/if}}>
                                        {{this}}
                                    </option>
                                    {{/each}}
                                </select>
                                <div class="invalid-feedback">Please select a difficulty level.</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Ingredients Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-list-ul me-2"></i>Ingredients *
                            <small class="ms-2">(Add one ingredient per line)</small>
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="ingredients" class="form-label fw-bold">
                                <i class="fas fa-shopping-basket me-2"></i>Ingredients List
                            </label>
                            <textarea class="form-control font-monospace" 
                                      id="ingredients" name="ingredients" 
                                      rows="6" 
                                      placeholder="2 cups all-purpose flour&#10;1 cup sugar&#10;3 large eggs&#10;1 tsp vanilla extract"
                                      required>{{#if formData.ingredients}}{{#if (isArray formData.ingredients)}}{{join formData.ingredients '\n'}}{{else}}{{formData.ingredients}}{{/if}}{{/if}}</textarea>
                            <div class="invalid-feedback">Please add at least one ingredient.</div>
                            <div class="form-text">Enter each ingredient on a new line. Include measurements (e.g., "2 cups", "1 tsp").</div>
                        </div>
                        
                        <div class="alert alert-info">
                            <i class="fas fa-lightbulb me-2"></i>
                            <strong>Tip:</strong> Be specific with measurements for best results.
                        </div>
                    </div>
                </div>
                
                <!-- Instructions Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-clipboard-list me-2"></i>Instructions *
                            <small class="ms-2">(Add one step per line)</small>
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="instructions" class="form-label fw-bold">
                                <i class="fas fa-list-ol me-2"></i>Step-by-Step Instructions
                            </label>
                            <textarea class="form-control font-monospace" 
                                      id="instructions" name="instructions" 
                                      rows="8" 
                                      placeholder="Preheat oven to 350°F (175°C)&#10;Mix dry ingredients in a bowl&#10;Add wet ingredients and mix well&#10;Bake for 20-25 minutes"
                                      required>{{#if formData.instructions}}{{#if (isArray formData.instructions)}}{{join formData.instructions '\n'}}{{else}}{{formData.instructions}}{{/if}}{{/if}}</textarea>
                            <div class="invalid-feedback">Please add cooking instructions.</div>
                            <div class="form-text">Enter each step on a new line. Be clear and sequential.</div>
                        </div>
                    </div>
                </div>
                
                <!-- Cooking Info Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="fas fa-clock me-2"></i>Cooking Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="cookingTime" class="form-label fw-bold">
                                    <i class="fas fa-hourglass-half me-2"></i>Cooking Time (minutes) *
                                </label>
                                <input type="number" class="form-control" 
                                       id="cookingTime" name="cookingTime" 
                                       value="{{formData.cookingTime}}"
                                       min="1" max="1000" step="1" 
                                       placeholder="e.g., 45" required>
                                <div class="invalid-feedback">Please enter cooking time in minutes.</div>
                                <div class="form-text">Total active cooking/preparation time.</div>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-image me-2"></i>Recipe Image
                                </label>
                                <div class="input-group">
                                    <input type="text" class="form-control" 
                                           id="imageUrl" name="imageUrl"
                                           value="{{formData.imageUrl}}"
                                           placeholder="Optional: Image URL">
                                    <button class="btn btn-outline-secondary" type="button" id="imageHelp">
                                        <i class="fas fa-question-circle"></i>
                                    </button>
                                </div>
                                <div class="form-text">Optional: Add a URL to an image of your finished dish.</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="card shadow-sm mb-5">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <a href="/recipes/dashboard" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-2"></i>Save Recipe
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            
            <!-- Form Validation Script -->
            <script>
                // Form validation
                (function () {
                    'use strict'
                    
                    const forms = document.querySelectorAll('.needs-validation')
                    
                    Array.from(forms).forEach(form => {
                        form.addEventListener('submit', event => {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            
                            form.classList.add('was-validated')
                        }, false)
                    })
                    
                    // Image URL help
                    document.getElementById('imageHelp').addEventListener('click', function() {
                        alert('Enter a direct image URL (e.g., https://example.com/image.jpg).\n\nFor now, leave empty to use the default recipe image.');
                    });
                    
                    // Character counters
                    const titleInput = document.getElementById('title');
                    const descInput = document.getElementById('description');
                    
                    titleInput.addEventListener('input', function() {
                        const count = this.value.length;
                        const max = 100;
                        const counter = this.parentElement.querySelector('.char-counter') || 
                                       this.insertAdjacentHTML('afterend', 
                                           `<div class="form-text char-counter text-end"></div>`).nextSibling;
                        
                        this.parentElement.querySelector('.char-counter').textContent = 
                            `${count}/${max} characters`;
                        
                        if (count > max) {
                            this.parentElement.querySelector('.char-counter').classList.add('text-danger');
                        } else {
                            this.parentElement.querySelector('.char-counter').classList.remove('text-danger');
                        }
                    });
                    
                    descInput.addEventListener('input', function() {
                        const count = this.value.length;
                        const max = 500;
                        const counter = this.parentElement.querySelector('.char-counter') || 
                                       this.insertAdjacentHTML('afterend', 
                                           `<div class="form-text char-counter text-end"></div>`).nextSibling;
                        
                        this.parentElement.querySelector('.char-counter').textContent = 
                            `${count}/${max} characters`;
                        
                        if (count > max) {
                            this.parentElement.querySelector('.char-counter').classList.add('text-danger');
                        } else {
                            this.parentElement.querySelector('.char-counter').classList.remove('text-danger');
                        }
                    });
                })()
            </script>
        </div>
    </div>
</div>