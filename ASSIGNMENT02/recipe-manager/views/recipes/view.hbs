<!-- Recipe Header -->
<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/recipes/public">Recipes</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{recipe.title}}</li>
            </ol>
        </nav>
        
        <div class="row">
            <div class="col-lg-8">
                <h1 class="display-6 fw-bold text-success mb-3">{{recipe.title}}</h1>
                <p class="lead mb-4">{{recipe.description}}</p>
                
                <div class="d-flex flex-wrap gap-3 mb-4">
                    <span class="badge bg-success px-3 py-2">
                        <i class="fas fa-utensils me-2"></i>{{recipe.category}}
                    </span>
                    <span class="badge bg-warning text-dark px-3 py-2">
                        <i class="fas fa-chart-bar me-2"></i>{{recipe.difficulty}}
                    </span>
                    <span class="badge bg-info text-dark px-3 py-2">
                        <i class="fas fa-clock me-2"></i>{{recipe.cookingTime}} minutes
                    </span>
                    <span class="badge bg-secondary px-3 py-2">
                        <i class="fas fa-eye me-2"></i>{{recipe.views}} views
                    </span>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <img src="{{recipe.createdBy.avatar}}" alt="{{recipe.createdBy.displayName}}" class="rounded-circle me-3" width="60" height="60" onerror="this.src='/images/default-avatar.png'">
                            <div class="text-start">
                                <h6 class="mb-0">{{recipe.createdBy.displayName}}</h6>
                                <small class="text-muted">Recipe Author</small>
                            </div>
                        </div>
                        <p class="text-muted mb-3">
                            <i class="fas fa-calendar me-2"></i>Posted {{formatDate recipe.createdAt}}
                        </p>
                        
                        {{#if canEdit}}
                        <div class="d-grid gap-2">
                            <a href="/recipes/{{recipe._id}}/edit" class="btn btn-outline-success">
                                <i class="fas fa-edit me-2"></i>Edit Recipe
                            </a>
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash me-2"></i>Delete Recipe
                            </button>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recipe Image -->
<div class="card mb-4 shadow-sm">
    <div class="card-body p-0">
        <img src="{{recipe.imageUrl}}" class="img-fluid w-100 rounded-top" alt="{{recipe.title}}" style="max-height: 400px; object-fit: cover;" onerror="this.src='/images/recipe-default.jpg'">
    </div>
</div>

<div class="row">
    <!-- Ingredients -->
    <div class="col-md-5 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="fas fa-list-ul me-2"></i>Ingredients
                    <span class="badge bg-light text-success ms-2">{{recipe.ingredientCount}} items</span>
                </h4>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    {{#each recipe.ingredients}}
                    <li class="list-group-item d-flex align-items-center">
                        <i class="fas fa-check-circle text-success me-3"></i>
                        <span>{{this}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    
    <!-- Instructions -->
    <div class="col-md-7 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="fas fa-clipboard-list me-2"></i>Cooking Instructions
                    <span class="badge bg-light text-success ms-2">{{recipe.instructionCount}} steps</span>
                </h4>
            </div>
            <div class="card-body">
                <ol class="list-group list-group-numbered list-group-flush">
                    {{#each recipe.instructions}}
                    <li class="list-group-item d-flex align-items-start mb-2">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Step {{@index}}</div>
                            {{this}}
                        </div>
                    </li>
                    {{/each}}
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Cooking Info -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-center h-100 shadow-sm">
            <div class="card-body">
                <i class="fas fa-clock fa-3x text-success mb-3"></i>
                <h5 class="card-title">Cooking Time</h5>
                <p class="card-text display-6 fw-bold text-success">{{recipe.cookingTime}} min</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card text-center h-100 shadow-sm">
            <div class="card-body">
                <i class="fas fa-chart-bar fa-3x text-success mb-3"></i>
                <h5 class="card-title">Difficulty Level</h5>
                <p class="card-text display-6 fw-bold text-success">{{recipe.difficulty}}</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card text-center h-100 shadow-sm">
            <div class="card-body">
                <i class="fas fa-utensils fa-3x text-success mb-3"></i>
                <h5 class="card-title">Category</h5>
                <p class="card-text display-6 fw-bold text-success">{{recipe.category}}</p>
            </div>
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="d-flex justify-content-between mb-5">
    <a href="/recipes/public" class="btn btn-outline-success">
        <i class="fas fa-arrow-left me-2"></i>Back to Recipes
    </a>
    
    {{#if user}}
    <div class="btn-group">
        <button type="button" class="btn btn-success">
            <i class="fas fa-heart me-2"></i>Save Recipe
        </button>
        <button type="button" class="btn btn-outline-success">
            <i class="fas fa-print me-2"></i>Print
        </button>
        <button type="button" class="btn btn-outline-success">
            <i class="fas fa-share-alt me-2"></i>Share
        </button>
    </div>
    {{/if}}
</div>

<!-- Delete Confirmation Modal -->
{{#if canEdit}}
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the recipe "<strong>{{recipe.title}}</strong>"?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/recipes/{{recipe._id}}?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Recipe
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}